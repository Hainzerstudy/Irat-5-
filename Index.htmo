        .recommendation-title {
            font-weight: 600;
            color: var(--primary-color);
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }
        
        .recommendation-title i {
            margin-right: 10px;
            color: var(--accent-color);
        }
        
        /* GES-36 Section */
        .ges-container {
            background-color: #f0f7ff;
            border-radius: 8px;
            padding: 25px;
            margin-top: 20px;
        }
        
        .ges-option {
            margin-bottom: 15px;
            padding: 15px;
            background-color: white;
            border-radius: 6px;
            border: 2px solid var(--border-color);
            cursor: pointer;
            transition: all 0.2s;
