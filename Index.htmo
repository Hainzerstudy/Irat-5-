        .ges-option:hover {
            border-color: var(--primary-color);
        }
        
        .ges-option.selected {
            border-color: var(--accent-color);
            background-color: #e8f5e9;
        }
        
        /* Dropdown Styles */
        .dropdown-group {
            margin-bottom: 20px;
