    <div class="app-container">
        <!-- Sidebar Navigation -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <h2><i class="fas fa-hospital-alt"></i> IRAT-5 + Tinetti</h2>
                <p>Evaluación Clínica</p>
            </div>
            <ul class="nav-menu">
